<% provide(:title, "Log in") %>
<h1>Log in</h1>




<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div id="app1">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, 'v-model': 'newUser.name', 'v-on:blur': 'name_blur = true', class: 'form-control' %>
        <div><%= "#{f.object_name}[email]" %></div>

        <%= f.label :password %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, 'v-model': 'newUser.postcode', 'v-on:blur': 'postcodeBlue = true', class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>

        <%= f.submit "Log in", class: "btn btn-primary" %>

      <% end %>

      <ul class="errors">
        <li v-show="!validation.name && name_blur">Please provide a valid email address.</li>
        <li v-show="!validation.postcode && postcodeBlue">Please provide a valid postcode address.</li>
      </ul>
    </div>


    <p>New user? <%= link_to "Sign up now!", signup_path %></p>

  </div>

</div>

